<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/service_lifecycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="view_click"
            android:text="service_lifecycle" />

        <Button
            android:id="@+id/localbinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="view_click"
            android:text="localbinding" />

        <Button
            android:id="@+id/local_binding_usingIbinder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="view_click"
            android:text="local_binding_usingIbinder" />

        <Button
            android:id="@+id/remotebinding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="view_click"
            android:text="remote binding using messenger" />


    </LinearLayout>
</ScrollView>
